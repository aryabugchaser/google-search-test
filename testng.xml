<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AutomationSuite">
    <listeners>
        <!-- Default HTML report (index.html) -->
        <listener class-name="org.testng.reporters.SuiteHTMLReporter"/>
        <!-- Emailable summary report (emailable-report.html) -->
        <listener class-name="org.testng.reporters.EmailableReporter"/>
        <listener class-name="tests.ReportExtras"/>

    </listeners>

    <test name="All Tests">
        <classes>
            <class name="tests.InvalidLoginTest"/>
            <class name="tests.LoginFormValidationTest"/>
            <class name="tests.SearchAutomationTest"/>
            <class name="tests.GoogleTest"/>
            <class name="tests.LoginTests"/>
            <class name="tests.BaseTest"/>

        </classes>
    </test>
</suite>

